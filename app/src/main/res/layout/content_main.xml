<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn= "@layout/activity_main2">

    <ImageView
        android:id="@+id/profile_photo"
        android:src="@drawable/placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/username_tag"
        android:layout_below="@id/profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"/>

    <TextView
        android:id="@+id/username"
        android:layout_below="@id/profile_photo"
        android:layout_toRightOf="@id/username_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profile_url_tag"
        android:layout_below="@id/username_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Github Profile URL:"/>

    <TextView
        android:id="@+id/profile_url"
        android:layout_below="@id/username_tag"
        android:layout_toRightOf="@id/profile_url_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>